<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.myapp.dao.MoneyDao">

  <!-- 결과 레코드의 컬럼 값을 자바 객체에 어떻게 담을 것인지 설정한다. -->
  <resultMap type="money" id="moneyMap">
    <id     column="money_no"       property="no"/>
    <result     column="wheres"         property="wheres"/>
    <result     column="price"         property="price"/>
    <result     column="created_date"         property="useDate"/>
    <result     column="review"       property="review"/>
  </resultMap>
  
  
  <insert id="insert" parameterType="money">
  insert into project_wheres(wheres,price,review)
  values(
  <if test="wheres != null">
    #{wheres},
  </if>
  <if test="price != null">
  #{price},
  </if>
  #{review}
  )
  </insert>
  
 <select id="findAll" parameterType="int" resultMap = "moneyMap">
  select 
    money_no, wheres, price, review ,created_date
  from 
    project_wheres
  </select>
  
 <select id="findBy" parameterType="int" resultMap = "moneyMap">
  select
    money_no, wheres, price, review ,created_date
  from
    project_wheres
  where
    money_no = #{moneyNo};
  </select>
  
  
  <update id="update" parameterType="money">
  update project_wheres set
    wheres=#{wheres},
    price=#{price},
    review=#{review}
  where
    money_no=#{no} 
  </update>
  
  <delete id="delete" parameterType = "money">
  delete from project_wheres
  where
    money_no=#{no}
  </delete>
  
  </mapper>